@model Dog_Go.Models.ViewModels.WalkerProfileViewModel

@{ ViewData["Title"] = "Profile"; }
<div>
    <h1 class="mb-4">@Model.Walker.Name</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg" />
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-lg-4 col-md-8 container mt-5">
            <h2>Recent Walks</h2>

            <div class="row">
                @foreach (Walks walk in Model.Walks)
                 {
                    <div class="card m-4" style="width: 18rem;">
                        <img src="https://cdn.pixabay.com/photo/2018/08/15/13/12/dog-3608037_960_720.jpg" class="card-img-top" alt="Doggo" />

                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@walk.Date</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Dog:</label>
                                <span>@walk.Dog</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <p>@walk.Duration</p>
                            </div>
                        </div>
                    </div>
                 }
            </div>
        </section>
    </div>
</div>
}